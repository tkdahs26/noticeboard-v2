<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCE5FF"
    android:fillViewport="true"
    tools:context="._1_1register_page">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="229dp"
        android:layout_height="76dp"
        android:text="회원가입"
        android:textSize="50dp"
        android:translationX="70dp"
        app:layout_constraintBottom_toTopOf="@+id/joinid_edit"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="70dp" />

    <EditText
        android:id="@+id/joinid_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="아이디"
        android:background="@drawable/border_text"
        android:inputType="textPersonName"
        android:translationX="70dp"
        android:translationY="200dp"
        app:layout_constraintBottom_toTopOf="@+id/password_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.348"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/password_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPersonName"
        android:background="@drawable/border_text"
        android:translationX="70dp"
        android:translationY="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.348"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="239dp" />

    <EditText
        android:id="@+id/password2_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="비밀번호 확인"
        android:inputType="textPersonName"
        android:background="@drawable/border_text"
        android:translationX="70dp"
        android:translationY="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.303" />

    <EditText
        android:id="@+id/email_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="이메일"
        android:inputType="textPersonName"
        android:background="@drawable/border_text"
        android:translationX="70dp"
        android:translationY="390dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="374dp" />


    <ImageButton

        android:id="@+id/join_btn"
        android:layout_width="108dp"
        android:layout_height="46dp"
        android:layout_marginEnd="92dp"
        android:translationX="200dp"
        android:translationY="450dp"
        android:src="@drawable/rectangle3"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="476dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:translationX="210dp"
        android:translationY="460dp"
        android:clickable="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="회원가입"/>




    <ImageButton
        android:id="@+id/back_btn"
        android:src="@drawable/rectangle"
        android:layout_width="108dp"
        android:layout_height="46dp"
        android:translationX="70dp"
        android:translationY="450dp"
        app:layout_constraintEnd_toStartOf="@+id/join_btn"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="476dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:translationX="80dp"
        android:translationY="460dp"
        android:clickable="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="뒤로가기"/>


    <ImageButton
        android:id="@+id/overlap_btn"
        android:layout_width="108dp"
        android:layout_height="36dp"
        android:src="@drawable/rectangle2"
        android:translationX="290dp"
        android:translationY="195dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="false"
        android:text="중복확인"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:translationX="300dp"
        android:translationY="200dp" />
</RelativeLayout>

</ScrollView>