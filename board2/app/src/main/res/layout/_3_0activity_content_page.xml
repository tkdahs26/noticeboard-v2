<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCE5FF"
    tools:context="._3_0content_page">

    <TextView
        android:id="@+id/fixtitle_edit"
        android:layout_width="364dp"
        android:layout_height="40dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:translationX="20dp"
        android:padding="7dp"
        android:background="@drawable/border_text"

        android:translationY="50dp" />

    <TextView
        android:id="@+id/fixcontent_edit"
        android:layout_width="365dp"
        android:layout_height="242dp"
        android:padding="7dp"
        android:background="@drawable/border_text"
        android:text="TextView"
        android:textStyle="bold"
        android:translationX="20dp"
        android:translationY="200dp" />

    <TextView
        android:id="@+id/fixwriter_textview"
        android:layout_width="84dp"
        android:layout_height="34dp"
        android:padding="7dp"
        android:background="@drawable/border_text"
        android:text="TextView"
        android:translationX="300dp" />


    <ImageButton
        android:id="@+id/fix_button"


        android:layout_width="108dp"
        android:layout_height="45dp"
        android:src="@drawable/rectangle"

        android:translationX="80dp"
        android:translationY="450dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="false"
        android:text="수정"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:translationX="110dp"
        android:translationY="460dp" />

    <ImageButton
        android:id="@+id/delete_button"


        android:layout_width="108dp"
        android:layout_height="45dp"
        android:src="@drawable/rectangle3"
        android:text="삭제"
        android:translationX="200dp"
        android:translationY="450dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="false"
        android:text="삭제"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:translationX="230dp"
        android:translationY="460dp" />
</RelativeLayout>